# AutoAgent MCP Server - Production Environment Variables
# Copy this file to .env.production and fill in the actual values
# DO NOT commit .env.production to version control

# Server Configuration
PORT=8787

# MarketCheck API Configuration
MARKETCHECK_API_KEY=your_marketcheck_api_key_here
MARKETCHECK_BASE_URL=https://marketcheck-prod.apigee.net

# Lead Security & Forwarding
LEAD_ENC_KEY=your_32_byte_base64_encryption_key_here
DASHBOARD_INGEST_URL=https://your-dashboard-domain.com/api/ingest/lead
DASHBOARD_INGEST_TOKEN=your_secure_dashboard_token_here

# Widget Configuration
WIDGET_HOST=https://your-railway-domain.railway.app

# AutoAgent Diagnostics
AA_DIAG=1

# OpenAI App Configuration (optional)
OPENAI_APP_NAME=AutoAgent

# Database Configuration (for future Postgres migration)
# DATABASE_URL=postgresql://user:password@host:port/database
# DB_HOST=your-postgres-host
# DB_PORT=5432
# DB_NAME=autoagent
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password

# Redis Configuration (for production rate limiting)
# REDIS_URL=redis://your-redis-host:6379
# REDIS_PASSWORD=your-redis-password

# Monitoring & Logging
# LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn-here